# === Required API Keys ===
# OpenAI API key for embeddings and language models
OPENAI_API_KEY=your_openai_api_key_here

# Activeloop token for Deep Lake storage
ACTIVELOOP_TOKEN=your_activeloop_token_here

# === Deep Lake Configuration ===
# Path to Deep Lake dataset (format: hub://<username>/<dataset-name>)
DEEPLAKE_DATASET_PATH=hub://your_username/sdk-documentation

# === Web Search Configuration (Optional) ===
# Google API key for web search fallback (optional)
GOOGLE_API_KEY=your_google_api_key_here

# Google Custom Search Engine ID (optional)
GOOGLE_CSE_ID=your_google_cse_id_here

# === Service Configuration ===
# Host for API service
API_HOST=0.0.0.0

# Port for API service
API_PORT=8000

# === Update Configuration ===
# Enable automatic documentation updates (true/false)
ENABLE_AUTO_UPDATES=true

# Update schedule in cron format (default: 2 AM daily)
UPDATE_SCHEDULE=0 2 * * *

# === Model Configuration ===
# Model name for code generation
MODEL_NAME=gpt-4-turbo

# Temperature for generation (0.0-1.0)
TEMPERATURE=0.2

# === Document Processing ===
# Size of chunks for document splitting
CHUNK_SIZE=1000

# Overlap between chunks
CHUNK_OVERLAP=100
